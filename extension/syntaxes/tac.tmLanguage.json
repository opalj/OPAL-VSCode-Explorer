{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tac",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#string"
		},
		{
			"include": "#meta"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{	
					"name" : "token.error-token",
					"match" : "\\b(if|goto)\\b \\d+"
				},
				{	
					"name" : "keyword.others",
					"match" : "\\b(return|void|static|throw|if|goto)\\b"
				},
				{	
					"name" : "keyword.operator.new",
					"match" : "\\b(new)\\b"
				},
				{	
					"name" : "keyword.control",
					"match" : "\\b(exception)\\b"
				},
				{
					"name" : "entity.name.function",
					"match": "\\b\\w+\\.\\w+(\\.\\w+)+\\b"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment",
					"match": "//(\\s|\\w|\\.|\\\u216A|\\\u2192|.|\\$)*|/\\*(\\w|\\s|\\(|\\)|\\{|\\}|\\.|-)*\\*/"
				},
				{
					"name": "variable.parameter",
					"match": "/\\* PARAMETERS:(\\s|\\.|\\w|.)*|\\*/"
				},
				{
					"name": "variable.import.parameter.js",
					"match": "param[0-9]*: .*"
				},
				{
					"name": "token.error-token",
					"match": "\/\/(.*?)â†’"
				}
			]
		},
		"string": {
			"patterns": [
				{
					"name": "entity.name.tag",
					"match": "\"(\\s|\\.|\\w|\\\\|.|/)*\""  
				},
				{
					"name": "string.jade",
					"match": "(\\d)*:/\\*pc=-?\\d+:\\*/"  
				}
			]
		}
	},

	
	"scopeName": "source.tac"
}

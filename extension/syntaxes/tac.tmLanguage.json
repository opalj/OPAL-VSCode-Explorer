{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tac",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#string"
		},
		{
			"include": "#meta"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{	
					"name" : "keyword.control",
					"match" : "\\b(if|goto)\\b"
				},
				{	
					"name" : "keyword.others",
					"match" : "\\b(return|void|static|throw)\\b"
				},
				{	
					"name" : "keyword.operator.new",
					"match" : "\\b(new)\\b"
				},
				{	
					"name" : "keyword.control.less",
					"match" : "\\b(exception)\\b"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "//(\\s|\\w|\\.|\\\u216A|\\\u2192|.|\\$)*|/\\*(\\w|\\s|\\(|\\)|\\{|\\}|\\.|-|\\$)*\\*/"
				},
				{
					"name": "comment.block",
					"match": "/\\* PARAMETERS:(\\s|\\.|\\w|.)*|\\*/"
				},
				{
					"name": "comment.block.documentation",
					"match": "param[0-9]*: .*"
				}

			]
		},
		"string": {
			"patterns": [
				{
					"name": "string.other",
					"match": "\"(\\s|\\.|\\w|\\\\|.|/)*\""  
				},
				{
					"name": "string.jade",
					"match": "(\\d)*:/\\*pc=\\d+:\\*/"  
				}
			]
		},
		"support": {
			"patterns": [
				{
					"name": "support.class",
					"match": "<init>"  
				}
			]
		}
	},

	
	"scopeName": "source.tac"
}

{
	"name": "opal-vscode-explorer",
	"displayName": "opal vscode explorer",
	"description": "VS Code Explorer for the OPAL Application",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.tac",
		"workspaceContains:**/opal.config.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.tac",
				"title": "Opal-TAC"
			}
		],
		"languages": [
			{
				"id": "tac",
				"aliases": [
					"three-address code",
					"tac"
				],
				"extensions": [
					".tac"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "tac",
				"scopeName": "source.tac",
				"path": "./syntaxes/tac.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"is-reachable": "^3.0.0",
		"request-promise-native": "^1.0.7",
		"chai": "*",
		"mocha": "*",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42",
		"@types/is-reachable": "^3.0.0"
	}
}

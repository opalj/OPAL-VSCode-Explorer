{
	"name": "opal-vscode-explorer",
	"displayName": "opal vscode explorer",
	"description": "VS Code Explorer for the OPAL Application",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.tac"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.tac",
				"title": "Opal-TAC"
			},
			{
				"command": "editor.printReferences",
				"title": "Show All References"
			}
		],
		"themes": [
            {
                "label": "c",
                "uiTheme": "vs-dark",
                "path": "./themes/c-color-theme.json"
            }
        ],
		"languages": [
			{
				"id": "tac",
				"aliases": [
					"three-address code",
					"tac"
				],
				"extensions": [
					".tac"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "editor.printReferences",
					"when": "editorHasReferenceProvider",
					"group": "navigation@1.31"
				}
			]
		},
		"grammars": [
			{
				"language": "tac",
				"scopeName": "source.tac",
				"path": "./syntaxes/tac.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"chai": "*",
		"mocha": "*",
		"tslint": "^5.8.0",
		"typescript": "^3.1.4",
		"vscode": "^1.1.29",
		"request-promise-native": "^1.0.7"
	}
}

{
  "name": "java-bytecode-workbench",
  "displayName": "Java Bytecode Workbench",
  "description": "VS Code Explorer for the OPAL Application",
  "version": "0.1.14",
  "publisher": "stg",
  "author": {
    "name": "Alexander GÃ¶ssl",
    "mail": "alexandergoessl@web.de"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/delors/opal-vscode-explorer.git"
  },
  "license": "SEE LICENSE File",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.tac",
    "onCommand:extension.menuTac",
    "onCommand:extension.menuJar",
    "onCommand:extension.menuBC",
    "onCommand:extension.menuSvg",
    "onView:package-explorer",
    "workspaceContains:**/*.class"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Java Byte Code Workbench",
      "properties": {
        "OPAL.server.port": {
          "type": "number",
          "default": "8080",
          "markdownDescription": "Port of the OPAL Server you want to connect."
        },
        "OPAL.server.options": {
          "type": "string",
          "default": null,
          "markdownDescription": "Java parameter for the OPAL Server. (like xmx, xms)"
        },
        "OPAL.jdk.load" : {
          "type" : "boolean",
          "default": true,
          "markdownDescription": "Should the JDK be part of the analysis?" 
        },
        "OPAL.jdk.asLib" : {
          "type" : "boolean",
          "default": false,
          "markdownDescription": "Should the JDK be loaded as Librarie?"
        }
      }
},
    "commands": [
      {
        "command": "extension.tac",
        "title": "Opal-TAC"
      },
      {
        "command": "extension.menuTac",
        "title": "Three-Address-Code ..."
      },
      {
        "command": "extension.menuTacDetached",
        "title": "Detached Three-Address-Code ..."
      },
      {
        "command": "extension.menuJar",
        "title": "Extract Jar ..."
      },
      {
        "command": "extension.menuBC",
        "title": "Bytecode ..."
      },
      {
        "command": "extension.menuSvg",
        "title": "Callgraph ..."
      },
      {
        "command": "extension.menuLibDir",
        "title": "Add to Library Directories"
      },
      {
        "command": "editor.printReferences",
        "title": "Show All References"
      },
      {
        "command": "extension.loadProject",
        "title": "Load Project"
      },
      {
        "command": "extension.reloadProjectCommand",
        "title": "Reload Project"
      },
      {
        "command": "extension.pickTargetRoot",
        "title": "Open Target"
      }
    ],
    "themes": [
      {
        "label": "c",
        "uiTheme": "vs-dark",
        "path": "./themes/tac-color-theme.json"
      }
    ],
    "languages": [
      {
        "id": "tac",
        "aliases": [
          "three-address code",
          "tac"
        ],
        "extensions": [
          ".tac"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "class",
        "extensions": [
          ".class"
        ],
        "aliases": [
          "class",
          "Class"
        ]
      },
      {
        "id": "jar",
        "extensions": [
          ".jar"
        ],
        "aliases": [
          "jar",
          "Jar"
        ]
      },
      {
        "id": "svg",
        "extensions": [
          ".svg"
        ],
        "aliases": [
          "svg",
          "Svg"
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opal-explorer",
          "title": "OPAL Explorer",
          "icon": "assets/expicon.svg"
        }
      ]
    },
    "views": {
      "opal-explorer": [
        {
          "id": "package-explorer",
          "name": "Package Explorer"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "extension.menuTac",
          "when": "!explorerResourceIsFolder && resourceLangId == class",
          "group": "2_workspace"
        },
        {
          "command": "extension.menuTacDetached",
          "when": "!explorerResourceIsFolder && resourceLangId == class",
          "group": "2_workspace"
        },
        {
          "command": "extension.menuBC",
          "when": "!explorerResourceIsFolder && resourceLangId == class",
          "group": "2_workspace"
        },
        {
          "command": "extension.menuJar",
          "when": "!explorerResourceIsFolder && resourceLangId == jar",
          "group": "2_workspace"
        }
      ],
      "view/title": [
        {
          "command": "extension.reloadProjectCommand",
          "group": "navigation"
        },
        {
          "command": "extension.menuBC",
          "when": "!explorerResourceIsFolder && resourceLangId == class",
          "group": "2_workspace"
        },
        {
          "command": "extension.menuLibDir",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace"
        },
        {
          "command": "extension.pickTargetRoot",
          "group": "navigation"
        }
      ]
    },
    "grammars": [
      {
        "language": "tac",
        "scopeName": "source.tac",
        "path": "./syntaxes/tac.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/is-reachable": "^3.0.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "chai": "^4.2.0",
    "file-system": "^2.2.2",
    "is-reachable": "^3.0.0",
    "mocha": "*",
    "request-promise-native": "^1.0.7",
    "directory-tree": "^2.2.1",
    "tslint": "^5.8.0",
    "typescript": "^3.1.4",
    "vscode": "^1.1.29"
  },
  "dependencies": {
    "@types/is-reachable": "^3.0.0",
    "@types/node": "^8.10.25",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "directory-tree": "^2.2.1",
    "file-system": "^2.2.2",
    "is-reachable": "^3.0.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "tslint": "^5.8.0",
    "typescript": "^3.1.4"
  }
}

{
	"name": "opal-vscode-explorer",
	"displayName": "opal vscode explorer",
	"description": "VS Code Explorer for the OPAL Application",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.tac",
		"onCommand:extension.menuTac",
		"onCommand:extension.menuJar",
		"onCommand:extension.menuBC",
		"workspaceContains:**/opal.config.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.tac",
				"title": "Opal-TAC"
			},
			{
				"command": "extension.menuTac",
				"title": "TAC from file"
			},
			{
				"command": "extension.menuJar",
				"title": "Extract Jar..."
			},
			{
				"command": "extension.menuBC",
				"title": "BC from file"
			},
			{
				"command": "editor.printReferences",
				"title": "Show All References"
			}
		],
		"themes": [
			{
				"label": "c",
				"uiTheme": "vs-dark",
				"path": "./themes/tac-color-theme.json"
			}
		],
		"languages": [
			{
				"id": "tac",
				"aliases": [
					"three-address code",
					"tac"
				],
				"extensions": [
					".tac"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "class",
				"extensions": [
					".class"
				],
				"aliases": [
					"class",
					"Class"
				]
			},
			{
				"id": "jar",
				"extensions": [
					".jar"
				],
				"aliases": [
					"jar",
					"Jar"
				]
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "opal-explorer",
					"title": "OPAL Explorer",
					"icon": "assets/expicon.svg"
				}
			]
		},
		"views": {
			"opal-explorer": [
				{
					"id": "package-explorer",
					"name": "Package Explorer"
				}
			]
		},
		"menus": {
			"editor/context": [
				{
					"command": "editor.printReferences",
					"when": "editorHasReferenceProvider",
					"group": "navigation@1.31"
				}
			],
			"explorer/context": [
				{
					"command": "extension.menuTac",
					"when": "!explorerResourceIsFolder && resourceLangId == class",
					"group": "2_workspace"
				},
				{
					"command": "extension.menuBC",
					"when": "!explorerResourceIsFolder && resourceLangId == class",
					"group": "2_workspace"
				},
				{
					"command": "extension.menuJar",
					"when": "!explorerResourceIsFolder && resourceLangId == jar",
					"group": "2_workspace"
				}
			]
		},
		"grammars": [
			{
				"language": "tac",
				"scopeName": "source.tac",
				"path": "./syntaxes/tac.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/is-reachable": "^3.0.0",
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"chai": "^4.2.0",
		"is-reachable": "^3.0.0",
		"mocha": "*",
		"readdirp": "^2.2.1",
		"request-promise-native": "^1.0.7",
		"tslint": "^5.8.0",
		"typescript": "^3.1.4",
		"vscode": "^1.1.29"
	}
}
